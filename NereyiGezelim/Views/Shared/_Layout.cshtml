<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Nereyi Gezelim</title>
    <!-- Bootstrap Core CSS -->
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="~/Content/css/blog-home.css" rel="stylesheet">
    <link href="@Url.Content("~/Content/Gridmvc.css")" rel="stylesheet" type="text/css" />
    

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>

<style>

    footer{
        color:white;
        background-color:#000000;
    }
    body{

        background-color:#79a2be;
            }

</style>


<body>
    <!-- Navigation -->
    <nav class="navbar navbar-inverse" role="navigation">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/Home/Index/">@NereyiGezelim.Resources.HomeTexts.NereyiGezelim</a>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li>
                        <a href="/Home/Hakkimizda/">@NereyiGezelim.Resources.HomeTexts.Hakkımızda</a>
                    </li>
                    <li>
                        <a href="/Home/Bolgeler/">@NereyiGezelim.Resources.HomeTexts.Bölgeler</a>
                    </li>
                    <li>
                        <a href="/Home/Iletisim/">@NereyiGezelim.Resources.HomeTexts.İletişim</a>
                    </li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right top-nav">
                        <li>
                            <a href="/Uye/Create/">@NereyiGezelim.Resources.HomeTexts.ÜyeOl</a>
                        </li>

                        @if (Session["UyeId"] != null)
                        {
                            <li>
                                <a href="/Uye/Index/@Session["UyeId"]">@Session["KullaniciAdi"].ToString()</a>
                            </li>
                            <li>
                                <a href="/Uye/LogOut/">@NereyiGezelim.Resources.HomeTexts.Çıkış</a>
                            </li>



                            if (Convert.ToInt32(Session["YetkiId"]) == 1)
                            {
                                <li>
                                    <a href="/Admin/Index/">@NereyiGezelim.Resources.HomeTexts.AdminPaneli</a>

                                </li>
                            }
                        }

                        else
                        {
                            <li>
                                <a href="/Uye/Login/">@NereyiGezelim.Resources.HomeTexts.GirişYap</a>

                            </li>
                        }
                        

                            <ul class="nav navbar navbar-nav">

                                <li>
                                    <a class="dropdown-toggle" role="button" aria-expanded="false" href="#" data-toggle="dropdown"><i class="glyphicon glyphicon-globe"></i>@NereyiGezelim.Resources.HomeTexts.Dil<span class="caret"></span></a>
                                    <ul class="dropdown-menu">
                                        <li>@Html.ActionLink("Türkçe", "Change", "Language", new { LanguageAbbrevation = "tr" }, null)</li>
                                        <li>@Html.ActionLink("English", "Change", "Language", new { LanguageAbbrevation = "en" }, null)</li>
                                    </ul>
                                </li>
                            </ul>

                        
                    </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>
    <!-- Page Content -->
    <div class="container">
        <div class="row">
            <!-- Blog Entries Column -->
            <div class="col-md-8">
                @*Content*@
                @RenderBody()
            </div>
               
                <!-- First Blog Post -->
              
            <!-- Blog Sidebar Widgets Column -->
            <div class="col-md-4">
                <!-- Blog Search Well -->
                <div class="well">
                    
                    @Html.Partial("BlogAraPartial", "Home")
                    
                    <!-- /.input-group -->
                </div>
                <!-- Blog Categories Well -->
                <div class="well">


                    @{
                        Html.RenderAction("KategoriPartial", "Home");
                    }

                </div>
                <div class="well">

                    @{
                        Html.RenderAction("PopulerYerler", "Home");
                    }
                </div>
            <div class="well">

                @{
                    Html.RenderAction("SonYorumlar", "Home");
                }
            </div>
                <!-- /.col-lg-6 -->
            </div>
                    <!-- /.row -->
                </div>
                <!-- Side Widget Well -->
               
            </div>
        
        <!-- /.row -->
        <hr>
        <!-- Footer -->
        <footer>
            <div class="row">
                <div class="col-lg-12">
                    <p>Copyright &copy; burakdurmus @DateTime.Now.Year</p>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </footer>
    </div>
    <!-- /.container -->
    <!-- jQuery -->
    <script src="~/Content/js/jquery.js"></script>
    <script src="@Url.Content("~/Scripts/gridmvc.min.js")" type="text/javascript"> </script>
    <!-- Bootstrap Core JavaScript -->
    <script src="~/Content/js/bootstrap.min.js"></script>
</body>
</html>
