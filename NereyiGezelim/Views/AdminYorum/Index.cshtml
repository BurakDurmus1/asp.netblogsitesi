@model IEnumerable<NereyiGezelim.Models.yorum>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Yorumlar</h2>


<table class="table">
    <tr>
        <th>
            @Html.Label("Kullanıcı Adı")
        </th>
        <th>
            @Html.Label("Başlık Adı")
        </th>
        <th>
           @Html.Label("İçerik Adı")
        </th>
        <th>
           @Html.Label("Tarih Adı")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.uye.kullaniciadi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.yer.baslik)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.icerik)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tarih)
        </td>
        <td>
            @Html.ActionLink("Düzenle", "Edit", new { id=item.yorumid }) |
            @Html.ActionLink("Detaylar", "Details", new { id=item.yorumid }) |
            @Html.ActionLink("Sil", "Delete", new { id=item.yorumid })
        </td>
    </tr>
}

</table>
